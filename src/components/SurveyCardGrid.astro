---
// SurveyCardGrid.astro - Componente para mostrar encuestas de forma atractiva
---

<section id="surveys-section" class="py-16 px-4">
  <div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="text-center mb-12">
      <h2 class="text-5xl font-black bg-gradient-to-r from-blue-400 via-purple-400 to-pink-400 bg-clip-text text-transparent mb-4">
        üó≥Ô∏è Encuestas Activas
      </h2>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">
        Participa en las votaciones y haz que tu voz cuente en la blockchain
      </p>
    </div>

    <!-- Grid de Encuestas -->
    <div id="surveysGrid" class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      <!-- Las encuestas se cargar√°n din√°micamente aqu√≠ -->
    </div>

    <!-- Estado vac√≠o -->
    <div id="emptySurveys" class="hidden text-center py-16">
      <div class="text-6xl mb-4">üìä</div>
      <p class="text-gray-400 text-lg">No hay encuestas activas en este momento</p>
      <a href="/surveys" class="btn-primary mt-6 inline-block">
        Crear Nueva Encuesta
      </a>
    </div>

    <!-- Modal de Votaci√≥n -->
    <div id="votingModal" class="hidden fixed inset-0 z-50 flex items-center justify-center p-4">
      <!-- Backdrop -->
      <div class="absolute inset-0 bg-black/70 backdrop-blur-sm" onclick="closeVotingModal()"></div>
      
      <!-- Modal Content -->
      <div class="relative w-full max-w-2xl max-h-[90vh] overflow-y-auto">
        <div class="card-glass backdrop-blur-xl bg-gradient-to-br from-blue-600/20 via-purple-600/20 to-pink-600/20 border-2 border-white/20 rounded-3xl p-8 shadow-2xl">
          <!-- Header -->
          <div class="flex items-start justify-between mb-6">
            <div>
              <h3 id="modalSurveyName" class="text-3xl font-black text-white mb-2">Nombre de Encuesta</h3>
              <p id="modalSurveyDescription" class="text-gray-300">Descripci√≥n de la encuesta</p>
            </div>
            <button onclick="closeVotingModal()" class="text-gray-400 hover:text-white transition-colors text-3xl leading-none">
              √ó
            </button>
          </div>

          <!-- Payment Info -->
          <div class="bg-blue-500/20 border border-blue-400/30 rounded-xl p-4 mb-6">
            <div class="flex items-center gap-3">
              <span class="text-2xl">üí∞</span>
              <div>
                <p class="text-white font-semibold">Costo del voto: 0.1 XLM</p>
                <p class="text-gray-300 text-sm">El pago se procesar√° usando tu wallet de Freighter</p>
              </div>
            </div>
          </div>

          <!-- Candidates List -->
          <div id="modalCandidatesList" class="space-y-3 mb-6">
            <!-- Los candidatos se cargar√°n aqu√≠ -->
          </div>

          <!-- Loading State -->
          <div id="modalLoading" class="text-center py-8">
            <div class="inline-block animate-spin rounded-full h-12 w-12 border-4 border-purple-500 border-t-transparent"></div>
            <p class="text-gray-300 mt-4">Cargando candidatos...</p>
          </div>

          <!-- Error State -->
          <div id="modalError" class="hidden text-center py-8">
            <div class="text-5xl mb-4">‚ùå</div>
            <p class="text-red-400 text-lg" id="modalErrorMessage">Error al cargar candidatos</p>
          </div>

          <!-- Actions -->
          <div class="flex gap-4 mt-8">
            <button onclick="closeVotingModal()" 
              class="flex-1 px-6 py-3 rounded-xl font-semibold bg-gray-600 hover:bg-gray-700 text-white transition-all duration-300">
              Cancelar
            </button>
            <button id="confirmVoteBtn" onclick="confirmVote()" disabled
              class="flex-1 px-6 py-3 rounded-xl font-bold bg-gradient-to-r from-blue-600 via-purple-600 to-pink-600 hover:from-blue-500 hover:via-purple-500 hover:to-pink-500 text-white shadow-lg transition-all duration-300 disabled:opacity-50 disabled:cursor-not-allowed">
              üó≥Ô∏è Confirmar Voto
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import { freighterService } from '../services/FreighterService';

  interface Survey {
    _id: string;
    name: string;
    description: string;
    start_date: string;
    end_date: string;
    candidates: string[];
  }

  interface Candidate {
    _id: string;
    name: string;
    party?: string;
    description?: string;
    imageUrl?: string;
  }

  let currentSurveyId: string | null = null;
  let selectedCandidateId: string | null = null;

  async function loadSurveys() {
    try {
      const response = await fetch('http://localhost:3000/api/surveys');
      const surveys: Survey[] = await response.json();
      
      const surveysGrid = document.getElementById('surveysGrid');
      const emptySurveys = document.getElementById('emptySurveys');
      
      if (!surveys || surveys.length === 0) {
        surveysGrid?.classList.add('hidden');
        emptySurveys?.classList.remove('hidden');
        return;
      }

      surveysGrid?.classList.remove('hidden');
      emptySurveys?.classList.add('hidden');

      // Filtrar solo encuestas activas
      const now = new Date();
      const activeSurveys = surveys.filter(survey => {
        const startDate = new Date(survey.start_date);
        const endDate = new Date(survey.end_date);
        return now >= startDate && now <= endDate;
      });

      if (activeSurveys.length === 0) {
        surveysGrid.innerHTML = `
          <div class="col-span-full text-center py-12">
            <div class="text-5xl mb-4">‚è∞</div>
            <p class="text-gray-400 text-lg">No hay encuestas activas en este momento</p>
            <p class="text-gray-500 text-sm mt-2">Hay ${surveys.length} encuesta(s) programada(s) para el futuro</p>
          </div>
        `;
        return;
      }

      surveysGrid.innerHTML = activeSurveys.map(survey => {
        const endDate = new Date(survey.end_date);
        const timeRemaining = getTimeRemaining(endDate);
        
        return `
          <div class="group relative overflow-hidden rounded-3xl border-2 border-white/20 hover:border-purple-500/50 transition-all duration-500 hover:scale-105 hover:shadow-2xl hover:shadow-purple-500/20">
            <!-- Background Gradient -->
            <div class="absolute inset-0 bg-gradient-to-br from-blue-600/20 via-purple-600/20 to-pink-600/20 backdrop-blur-xl"></div>
            
            <!-- Animated Glow Effect -->
            <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500">
              <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-r from-blue-500/10 via-purple-500/10 to-pink-500/10 animate-pulse"></div>
            </div>

            <!-- Content -->
            <div class="relative p-8">
              <!-- Header -->
              <div class="flex items-start justify-between mb-6">
                <div class="flex-1">
                  <h3 class="text-2xl font-bold text-white mb-2 group-hover:text-purple-300 transition-colors">
                    ${survey.name}
                  </h3>
                  <span class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-green-500/20 border border-green-400/30 text-green-300 text-sm font-semibold">
                    <span class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></span>
                    Activa
                  </span>
                </div>
              </div>

              <!-- Description -->
              <p class="text-gray-300 text-base mb-6 line-clamp-3 leading-relaxed">
                ${survey.description}
              </p>

              <!-- Stats -->
              <div class="space-y-3 mb-6">
                <div class="flex items-center gap-3 text-sm">
                  <span class="text-purple-300">üë•</span>
                  <span class="text-gray-400">
                    <span class="text-white font-semibold">${survey.candidates ? survey.candidates.length : 0}</span> candidatos
                  </span>
                </div>
                <div class="flex items-center gap-3 text-sm">
                  <span class="text-pink-300">‚è±Ô∏è</span>
                  <span class="text-gray-400">
                    Termina en <span class="text-white font-semibold">${timeRemaining}</span>
                  </span>
                </div>
                <div class="flex items-center gap-3 text-sm">
                  <span class="text-blue-300">üí∞</span>
                  <span class="text-gray-400">
                    Costo: <span class="text-white font-semibold">0.1 XLM</span> por voto
                  </span>
                </div>
              </div>

              <!-- Action Button -->
              <button 
                 class="vote-now-btn block w-full text-center px-6 py-4 rounded-xl font-bold text-lg
                        bg-gradient-to-r from-blue-600 via-purple-600 to-pink-600
                        hover:from-blue-500 hover:via-purple-500 hover:to-pink-500
                        text-white shadow-lg shadow-purple-500/30
                        transform transition-all duration-300
                        hover:shadow-xl hover:shadow-purple-500/50 hover:-translate-y-1
                        border-2 border-white/10 hover:border-white/30"
                 data-survey-id="${survey._id}"
                 data-survey-name="${survey.name}"
                 data-survey-description="${survey.description}"
                 data-candidates='${JSON.stringify(survey.candidates || [])}'>
                üó≥Ô∏è Votar Ahora
              </button>

              <!-- Blockchain Badge -->
              <div class="mt-4 flex items-center justify-center gap-2 text-xs text-gray-500">
                <span class="w-1.5 h-1.5 bg-blue-500 rounded-full animate-pulse"></span>
                <span>Powered by Stellar Blockchain</span>
              </div>
            </div>
          </div>
        `;
      }).join('');

    } catch (error) {
      console.error('Error al cargar encuestas:', error);
      const surveysGrid = document.getElementById('surveysGrid');
      if (surveysGrid) {
        surveysGrid.innerHTML = `
          <div class="col-span-full text-center py-12">
            <div class="text-5xl mb-4">‚ùå</div>
            <p class="text-red-400 text-lg">Error al cargar las encuestas</p>
            <button onclick="location.reload()" class="btn-primary mt-4">
              Reintentar
            </button>
          </div>
        `;
      }
    }
  }

  function getTimeRemaining(endDate: Date): string {
    const now = new Date();
    const diff = endDate.getTime() - now.getTime();
    
    if (diff <= 0) return 'Finalizada';
    
    const days = Math.floor(diff / (1000 * 60 * 60 * 24));
    const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
    
    if (days > 0) return `${days}d ${hours}h`;
    if (hours > 0) return `${hours}h ${minutes}m`;
    return `${minutes}m`;
  }

  // Abrir modal de votaci√≥n
  async function openVotingModal(surveyId: string, surveyName: string, surveyDescription: string, candidateIds: string[]) {
    currentSurveyId = surveyId;
    selectedCandidateId = null;
    
    // Actualizar informaci√≥n del modal
    const modalName = document.getElementById('modalSurveyName');
    const modalDesc = document.getElementById('modalSurveyDescription');
    if (modalName) modalName.textContent = surveyName;
    if (modalDesc) modalDesc.textContent = surveyDescription;
    
    // Mostrar modal
    const modal = document.getElementById('votingModal');
    modal?.classList.remove('hidden');
    
    // Mostrar loading, ocultar lista y error
    const loading = document.getElementById('modalLoading');
    const candidatesList = document.getElementById('modalCandidatesList');
    const errorDiv = document.getElementById('modalError');
    const confirmBtn = document.getElementById('confirmVoteBtn') as HTMLButtonElement;
    
    loading?.classList.remove('hidden');
    candidatesList?.classList.add('hidden');
    errorDiv?.classList.add('hidden');
    if (confirmBtn) confirmBtn.disabled = true;
    
    try {
      // Verificar si el usuario ya vot√≥
      if (freighterService.publicKey) {
        const checkResponse = await fetch(`http://localhost:3000/api/surveys/${surveyId}/check-vote`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ voterAddress: freighterService.publicKey })
        });
        
        const checkData = await checkResponse.json();
        if (checkData.hasVoted) {
          throw new Error('Ya has votado en esta encuesta');
        }
      }
      
      // Cargar candidatos
      const candidates = await Promise.all(
        candidateIds.map(async (id) => {
          const response = await fetch(`http://localhost:3000/api/candidates/${id}`);
          return response.json();
        })
      );
      
      // Ocultar loading, mostrar lista
      loading?.classList.add('hidden');
      candidatesList?.classList.remove('hidden');
      
      // Renderizar candidatos
      if (candidatesList) {
        candidatesList.innerHTML = candidates.map((candidate: Candidate) => `
          <label class="group cursor-pointer">
            <div class="flex items-center gap-4 p-4 rounded-xl border-2 border-white/20 hover:border-purple-500/50 transition-all duration-300 hover:bg-white/5">
              <input type="radio" name="candidate" value="${candidate._id}" 
                onchange="selectCandidate('${candidate._id}')"
                class="w-5 h-5 text-purple-600 focus:ring-purple-500">
              <div class="flex-1">
                <h4 class="text-white font-bold text-lg">${candidate.name}</h4>
                ${candidate.party ? `<p class="text-gray-400 text-sm">${candidate.party}</p>` : ''}
                ${candidate.description ? `<p class="text-gray-300 text-sm mt-1">${candidate.description}</p>` : ''}
              </div>
            </div>
          </label>
        `).join('');
      }
      
    } catch (error: any) {
      console.error('Error al cargar candidatos:', error);
      loading?.classList.add('hidden');
      errorDiv?.classList.remove('hidden');
      const errorMsg = document.getElementById('modalErrorMessage');
      if (errorMsg) {
        errorMsg.textContent = error.message || 'Error al cargar candidatos';
      }
    }
  }

  // Cerrar modal
  function closeVotingModal() {
    const modal = document.getElementById('votingModal');
    modal?.classList.add('hidden');
    currentSurveyId = null;
    selectedCandidateId = null;
  }

  // Seleccionar candidato
  function selectCandidate(candidateId: string) {
    selectedCandidateId = candidateId;
    const confirmBtn = document.getElementById('confirmVoteBtn') as HTMLButtonElement;
    if (confirmBtn) confirmBtn.disabled = false;
  }

  // Confirmar voto
  async function confirmVote() {
    if (!currentSurveyId || !selectedCandidateId) {
      alert('Por favor selecciona un candidato');
      return;
    }
    
    try {
      // Verificar conexi√≥n de wallet
      if (!freighterService.publicKey) {
        const connectResult = await freighterService.connect();
        if (!connectResult.success) {
          alert('‚ùå ' + connectResult.message);
          return;
        }
      }
      
      const voterAddress = freighterService.publicKey!;
      
      // Deshabilitar bot√≥n durante el proceso
      const confirmBtn = document.getElementById('confirmVoteBtn') as HTMLButtonElement;
      const originalText = confirmBtn.innerHTML;
      confirmBtn.disabled = true;
      confirmBtn.innerHTML = '‚è≥ Procesando...';
      
      // 1. Procesar pago de 0.1 XLM
      console.log('üí∞ Procesando pago de 0.1 XLM...');
      const paymentResult = await freighterService.sendPayment(
        'GBBP2RUEDFJQCUXFBODTTSH3RG7JGSVCSS5JZWZ7RKYDYCQXDEATA6IV', // Direcci√≥n de destino (testnet)
        '0.1'
      );
      
      if (!paymentResult.success) {
        throw new Error(paymentResult.message || 'Error al procesar el pago');
      }
      
      console.log('‚úÖ Pago procesado exitosamente');
      
      // 2. Registrar voto en backend
      console.log('üìù Registrando voto...');
      const voteResponse = await fetch(`http://localhost:3000/api/surveys/${currentSurveyId}/vote`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          candidateId: selectedCandidateId,
          voterAddress: voterAddress
        })
      });
      
      if (!voteResponse.ok) {
        const errorData = await voteResponse.json();
        throw new Error(errorData.error || 'Error al registrar el voto');
      }
      
      const voteData = await voteResponse.json();
      console.log('‚úÖ Voto registrado:', voteData);
      
      // Mostrar √©xito
      alert(`‚úÖ ¬°Voto registrado exitosamente!\n\nTransacci√≥n: ${paymentResult.transactionHash}\nTotal de votos: ${voteData.totalVotes}`);
      
      // Cerrar modal
      closeVotingModal();
      
    } catch (error: any) {
      console.error('‚ùå Error al votar:', error);
      alert(`‚ùå Error al procesar el voto:\n\n${error.message}`);
      
      // Restaurar bot√≥n
      const confirmBtn = document.getElementById('confirmVoteBtn') as HTMLButtonElement;
      if (confirmBtn) {
        confirmBtn.disabled = false;
        confirmBtn.innerHTML = 'üó≥Ô∏è Confirmar Voto';
      }
    }
  }

  // Exponer funciones globalmente
  (window as any).openVotingModal = openVotingModal;
  (window as any).closeVotingModal = closeVotingModal;
  (window as any).selectCandidate = selectCandidate;
  (window as any).confirmVote = confirmVote;

  // Cargar encuestas al montar el componente
  document.addEventListener('DOMContentLoaded', () => {
    loadSurveys();
    
    // Event delegation para botones de votar
    document.addEventListener('click', (e) => {
      const target = e.target as HTMLElement;
      const voteBtn = target.closest('.vote-now-btn') as HTMLButtonElement;
      
      if (voteBtn) {
        e.preventDefault();
        const surveyId = voteBtn.dataset.surveyId!;
        const surveyName = voteBtn.dataset.surveyName!;
        const surveyDescription = voteBtn.dataset.surveyDescription!;
        const candidates = JSON.parse(voteBtn.dataset.candidates || '[]');
        
        openVotingModal(surveyId, surveyName, surveyDescription, candidates);
      }
    });
    
    // Actualizar cada 30 segundos
    setInterval(loadSurveys, 30000);
  });
</script>

<style>
  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
