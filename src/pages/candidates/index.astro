---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Gesti√≥n de Candidatos - CenVote">
  <div class="min-h-screen bg-gradient-to-br from-slate-950 via-purple-900 to-slate-950 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-6xl mx-auto">
      <div class="card-glass backdrop-blur-lg p-8 rounded-3xl border-2 border-white/20">
        <h1 class="text-4xl font-black header-gradient mb-8">üéØ Gesti√≥n de Candidatos</h1>
        
        <!-- Formulario de Candidato -->
        <form id="candidateForm" class="space-y-6 mb-12">
          <input type="hidden" id="candidateId" name="candidateId">
          <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
            <div>
              <label for="name" class="block text-sm font-semibold text-white mb-2">Nombre Completo</label>
              <input type="text" id="name" name="name" required
                class="input-modern">
            </div>
            <div>
              <label for="rfc" class="block text-sm font-semibold text-white mb-2">RFC</label>
              <input type="text" id="rfc" name="rfc" required
                class="input-modern">
            </div>
          </div>
          <div class="flex justify-end space-x-4 pt-4">
            <button type="button" id="connectWalletBtn"
              class="btn-primary">
              üîó Conectar Wallet
            </button>
            <button type="button" id="cancelBtn" style="display: none;"
              class="px-6 py-2 rounded-lg font-semibold transition-all duration-300 bg-gradient-to-r from-gray-600 to-gray-700 text-white hover:from-gray-700 hover:to-gray-800">
              ‚ùå Cancelar
            </button>
            <button type="submit"
              class="btn-accent">
              <span id="submitBtnText">‚ú® Registrar Candidato</span>
            </button>
          </div>
        </form>

        <!-- Lista de Candidatos -->
        <div class="mt-12">
          <h2 class="text-2xl font-bold text-white mb-6 flex items-center gap-2">
            <span class="text-3xl">üìã</span> Candidatos Registrados
          </h2>
          <div class="overflow-x-auto rounded-xl border border-white/20">
            <table class="min-w-full divide-y divide-white/10">
              <thead class="bg-white/5">
                <tr>
                  <th class="px-6 py-4 text-left text-xs font-bold text-purple-300 uppercase tracking-wider">Nombre</th>
                  <th class="px-6 py-4 text-left text-xs font-bold text-purple-300 uppercase tracking-wider">RFC</th>
                  <th class="px-6 py-4 text-left text-xs font-bold text-purple-300 uppercase tracking-wider">Wallet</th>
                  <th class="px-6 py-4 text-left text-xs font-bold text-purple-300 uppercase tracking-wider">Acciones</th>
                </tr>
              </thead>
              <tbody class="bg-white/5 divide-y divide-white/10" id="candidatesList">
                <!-- Los candidatos se cargar√°n aqu√≠ din√°micamente -->
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  let publicKey = null;
  let isEditing = false;
  let editingId = null;

  // Conexi√≥n con Freighter
  import { freighterService } from '../../services/FreighterService';

  // Auto-detectar wallet conectada
  async function autoDetectWallet() {
    if (freighterService.publicKey) {
      publicKey = freighterService.publicKey;
      updateWalletButton(true);
      console.log('‚úÖ Wallet auto-detectada:', publicKey.slice(0, 8) + '...');
    } else {
      const isConnected = await freighterService.checkConnection();
      if (isConnected) {
        const result = await freighterService.connect();
        if (result.success) {
          publicKey = result.publicKey;
          updateWalletButton(true);
          console.log('‚úÖ Wallet reconectada autom√°ticamente');
        }
      }
    }
  }

  // Actualizar bot√≥n de wallet
  function updateWalletButton(connected) {
    const btn = document.getElementById('connectWalletBtn');
    if (connected && publicKey) {
      btn.textContent = `‚úÖ ${publicKey.slice(0, 6)}...${publicKey.slice(-4)}`;
      btn.classList.remove('btn-primary');
      btn.classList.add('bg-green-600', 'hover:bg-green-700');
    } else {
      btn.textContent = 'üîó Conectar Wallet';
      btn.classList.remove('bg-green-600', 'hover:bg-green-700');
      btn.classList.add('btn-primary');
    }
  }

  // Escuchar eventos de wallet
  window.addEventListener('walletConnected', (event: any) => {
    publicKey = event.detail.publicKey;
    updateWalletButton(true);
    console.log('üì° Evento de wallet conectada recibido');
  });

  window.addEventListener('walletDisconnected', () => {
    publicKey = null;
    updateWalletButton(false);
    console.log('üì° Evento de wallet desconectada recibido');
  });

  // Conexi√≥n con Freighter
  async function connectWallet() {
    try {
      const result = await freighterService.connect();
      
      if (result.success) {
        publicKey = result.publicKey;
        updateWalletButton(true);
        
        if (publicKey === freighterService.expectedPublicKey) {
            console.log('‚úÖ Cuenta verificada en formulario de candidatos');
        }
      } else {
        alert(result.message);
      }

    } catch (error) {
      console.error("Error al conectar wallet:", error);
      alert("Error al conectar con Freighter");
    }
  }

  // Cargar candidatos
  async function loadCandidates() {
    try {
      const response = await fetch('http://localhost:3000/api/candidates');
      const candidates = await response.json();
      const candidatesList = document.getElementById('candidatesList');
      
      if (candidates.length === 0) {
        candidatesList.innerHTML = `
          <tr>
            <td colspan="4" class="px-6 py-8 text-center text-gray-400">
              No hay candidatos registrados a√∫n
            </td>
          </tr>
        `;
        return;
      }
      
      candidatesList.innerHTML = candidates.map(candidate => `
        <tr class="hover:bg-white/10 transition-colors">
          <td class="px-6 py-4 whitespace-nowrap text-white font-medium">${candidate.name}</td>
          <td class="px-6 py-4 whitespace-nowrap text-gray-300">${candidate.rfc}</td>
          <td class="px-6 py-4 whitespace-nowrap">
            <span class="text-sm text-gray-400 font-mono">${candidate.wallet_address ? candidate.wallet_address.slice(0, 8) + '...' : 'No conectada'}</span>
          </td>
          <td class="px-6 py-4 whitespace-nowrap space-x-2">
            <button onclick="editCandidate('${candidate._id}')"
              class="text-blue-400 hover:text-blue-300 font-semibold transition-colors">‚úèÔ∏è Editar</button>
            <button onclick="deleteCandidate('${candidate._id}')"
              class="text-red-400 hover:text-red-300 font-semibold transition-colors">üóëÔ∏è Eliminar</button>
          </td>
        </tr>
      `).join('');
    } catch (error) {
      console.error('Error al cargar candidatos:', error);
    }
  }

  // Editar candidato
  async function editCandidate(id) {
    try {
      const response = await fetch(`http://localhost:3000/api/candidates/${id}`);
      const candidate = await response.json();
      
      // Llenar el formulario
      document.getElementById('candidateId').value = candidate._id;
      document.getElementById('name').value = candidate.name;
      document.getElementById('rfc').value = candidate.rfc;
      
      publicKey = candidate.wallet_address;
      updateWalletButton(true);
      
      // Cambiar el bot√≥n de submit
      isEditing = true;
      editingId = id;
      document.getElementById('submitBtnText').textContent = 'üíæ Actualizar Candidato';
      document.getElementById('cancelBtn').style.display = 'inline-block';
      
      // Scroll al formulario
      document.getElementById('candidateForm').scrollIntoView({ behavior: 'smooth' });
    } catch (error) {
      console.error('Error al cargar candidato:', error);
      alert('Error al cargar datos del candidato');
    }
  }

  // Eliminar candidato
  async function deleteCandidate(id) {
    if (!confirm('¬øEst√°s seguro de que deseas eliminar este candidato?')) {
      return;
    }
    
    try {
      const response = await fetch(`http://localhost:3000/api/candidates/${id}`, {
        method: 'DELETE'
      });

      if (response.ok) {
        alert('Candidato eliminado exitosamente');
        loadCandidates();
      } else {
        throw new Error('Error al eliminar candidato');
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Error al eliminar candidato');
    }
  }

  // Cancelar edici√≥n
  function cancelEdit() {
    isEditing = false;
    editingId = null;
    document.getElementById('candidateForm').reset();
    document.getElementById('candidateId').value = '';
    document.getElementById('submitBtnText').textContent = '‚ú® Registrar Candidato';
    document.getElementById('cancelBtn').style.display = 'none';
    
    // Restaurar la wallet conectada si existe
    if (freighterService.publicKey) {
      publicKey = freighterService.publicKey;
      updateWalletButton(true);
    } else {
      publicKey = null;
      updateWalletButton(false);
    }
  }

  // Registro o actualizaci√≥n de candidato
  document.getElementById('candidateForm').addEventListener('submit', async (e) => {
    e.preventDefault();

    const formData = new FormData(e.target);
    const candidateData = {
      name: formData.get('name'),
      rfc: formData.get('rfc'),
      wallet_address: publicKey || null  // Opcional
    };

    try {
      // Verificar que el usuario exista antes de registrar candidato
      if (!isEditing) {
        const usersResponse = await fetch('http://localhost:3000/api/users');
        const users = await usersResponse.json();
        const userExists = users.some(user => user.wallet_address === publicKey);
        
        if (!userExists) {
          alert('‚ùå Error: Debes estar registrado como usuario antes de registrarte como candidato.\n\nPor favor, ve a la secci√≥n de Usuarios y reg√≠strate primero.');
          return;
        }
      }

      // Guardar en MongoDB

      const url = isEditing 
        ? `http://localhost:3000/api/candidates/${editingId}`
        : 'http://localhost:3000/api/candidates';
        
      const method = isEditing ? 'PUT' : 'POST';
      
      const response = await fetch(url, {
        method,
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(candidateData)
      });

      if (response.ok) {
        alert(isEditing ? 'Candidato actualizado exitosamente' : 'Candidato registrado exitosamente');
        cancelEdit();
        loadCandidates();
      } else {
        throw new Error('Error al guardar candidato');
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Error al guardar candidato: ' + error.message);
    }
  });

  // Event Listeners
  document.addEventListener('DOMContentLoaded', async () => {
    document.getElementById('connectWalletBtn').addEventListener('click', connectWallet);
    document.getElementById('cancelBtn').addEventListener('click', cancelEdit);
    
    // Auto-detectar wallet al cargar
    await autoDetectWallet();
    
    loadCandidates();
  });

  // Hacer funciones globales
  window.editCandidate = editCandidate;
  window.deleteCandidate = deleteCandidate;
</script>
</Layout>