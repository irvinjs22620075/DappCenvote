---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Gestión de Usuarios - CenVote">
  <div class="min-h-screen bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
      <div class="bg-white rounded-lg shadow-lg p-6">
        <h1 class="text-3xl font-bold text-gray-900 mb-8">Gestión de Usuarios</h1>
        
        <!-- Formulario de Registro -->
        <form id="userForm" class="space-y-6">
          <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
            <div>
              <label for="first_name" class="block text-sm font-medium text-gray-700">Nombre</label>
              <input type="text" id="first_name" name="first_name" required
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary">
            </div>
            <div>
              <label for="paternal_last_name" class="block text-sm font-medium text-gray-700">Apellido Paterno</label>
              <input type="text" id="paternal_last_name" name="paternal_last_name" required
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary">
            </div>
            <div>
              <label for="maternal_last_name" class="block text-sm font-medium text-gray-700">Apellido Materno</label>
              <input type="text" id="maternal_last_name" name="maternal_last_name" required
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary">
            </div>
            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700">Teléfono</label>
              <input type="tel" id="phone" name="phone" required
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary">
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700">Correo Electrónico</label>
              <input type="email" id="email" name="email" required
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary">
            </div>
          </div>
          <div class="flex justify-end space-x-4">
            <button type="button" id="connectWalletBtn"
              class="bg-primary hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition duration-300">
              Conectar Wallet
            </button>
            <button type="submit"
              class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded-lg transition duration-300">
              Registrar Usuario
            </button>
          </div>
        </form>

        <!-- Lista de Usuarios -->
        <div class="mt-8">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Usuarios Registrados</h2>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nombre</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Wallet</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200" id="usersList">
                <!-- Los usuarios se cargarán aquí dinámicamente -->
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  let publicKey = null;

  // Conexión con Freighter
  import { freighterService } from '../../services/FreighterService';

  // Conexión con Freighter
  async function connectWallet() {
    try {
      const result = await freighterService.connect();
      
      if (result.success) {
        publicKey = result.publicKey;
        const btn = document.getElementById('connectWalletBtn');
        btn.textContent = 'Wallet Conectada';
        btn.classList.remove('bg-primary');
        btn.classList.add('bg-green-500');
        
        if (publicKey === freighterService.expectedPublicKey) {
            console.log('✅ Cuenta verificada en formulario de usuarios');
        }
      } else {
        alert(result.message);
      }

    } catch (error) {
      console.error("Error al conectar wallet:", error);
      alert("Error al conectar con Freighter");
    }
  }

  // Cargar usuarios
  async function loadUsers() {
    try {
      const response = await fetch('http://localhost:3000/api/users');
      const users = await response.json();
      const usersList = document.getElementById('usersList');
      
      usersList.innerHTML = users.map(user => `
        <tr>
          <td class="px-6 py-4 whitespace-nowrap">
            ${user.first_name} ${user.paternal_last_name} ${user.maternal_last_name}
          </td>
          <td class="px-6 py-4 whitespace-nowrap">${user.email}</td>
          <td class="px-6 py-4 whitespace-nowrap">
            <span class="text-sm text-gray-500">${user.wallet_address || 'No conectada'}</span>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <button onclick="editUser('${user._id}')"
              class="text-indigo-600 hover:text-indigo-900 mr-2">Editar</button>
          </td>
        </tr>
      `).join('');
    } catch (error) {
      console.error('Error al cargar usuarios:', error);
    }
  }

  // Registro de usuario
  document.getElementById('userForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    if (!publicKey) {
      alert('Por favor conecta tu wallet primero');
      return;
    }

    const formData = new FormData(e.target);
    const userData = {
      first_name: formData.get('first_name'),
      paternal_last_name: formData.get('paternal_last_name'),
      maternal_last_name: formData.get('maternal_last_name'),
      phone: formData.get('phone'),
      email: formData.get('email'),
      wallet_address: publicKey
    };

    try {
      const response = await fetch('http://localhost:3000/api/users', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(userData)
      });

      if (response.ok) {
        alert('Usuario registrado exitosamente');
        e.target.reset();
        loadUsers();
      } else {
        throw new Error('Error al registrar usuario');
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Error al registrar usuario');
    }
  });

  // Event Listeners
  document.addEventListener('DOMContentLoaded', () => {
    document.getElementById('connectWalletBtn').addEventListener('click', connectWallet);
    loadUsers();
  });
</script>