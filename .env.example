# Example environment configuration for CenVote dApp
# Copy this to .env.local and update with your values

# Soroban Smart Contract
PUBLIC_SOROBAN_CONTRACT_ID=CBHVPL... # Your deployed contract ID on Stellar Testnet

# Stellar Network Configuration
PUBLIC_STELLAR_NETWORK=TESTNET
PUBLIC_STELLAR_NETWORK_PASSPHRASE=Test SDF Network ; September 2015

# Soroban RPC URL (Testnet)
PUBLIC_SOROBAN_RPC_URL=https://soroban-testnet.stellar.org

# Freighter Configuration
# Note: Freighter auto-detects via browser extension, no config needed
# These are for reference only

PUBLIC_FREIGHTER_MIN_VERSION=1.7.0

# Passkey Configuration
PUBLIC_PASSKEY_RP_NAME=CenVote dApp
PUBLIC_PASSKEY_TIMEOUT=60000  # milliseconds

# Development Settings
PUBLIC_ENABLE_DEBUG=false
PUBLIC_SHOW_PASSKEY_DEBUG=false

# API Endpoints (if you have a backend)
PUBLIC_API_URL=http://localhost:3001
